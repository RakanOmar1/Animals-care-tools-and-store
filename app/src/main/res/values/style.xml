<resources>

    <!-- General Container -->
    <style name="AppContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">24dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Logo Image Style -->
    <style name="LogoImageStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Profile Image -->
    <style name="ProfileImageStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- EditText Field -->
    <style name="EditTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
    </style>

    <!-- Button Styles (Base) -->
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">#4B2E1E</item>
    </style>

    <!-- Specific Button Styles -->
    <style name="LoginButtonStyle" parent="PrimaryButtonStyle">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="RegistrationButtonStyle" parent="PrimaryButtonStyle">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:backgroundTint">@android:color/holo_green_light</item> <!-- For registration -->
    </style>

    <style name="SignUpButtonStyle" parent="PrimaryButtonStyle">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@android:color/holo_orange_light</item> <!-- For signup -->
    </style>

    <style name="ConfirmAllButtonStyle" parent="PrimaryButtonStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:text">Confirm</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">#4CAF50</item> <!-- Green tone -->
    </style>

    <!-- Error Text -->
    <style name="ErrorText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Header Row -->
    <style name="HeaderLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Profile Button in Header -->
    <style name="ProfileButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- styles.xml -->
    <style name="SearchBarStyle">
        <!-- Size and Layout -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:hint">Search for toys, food, treats...</item>
        <item name="android:textColorHint">#777777</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>

        <!-- Input Behavior -->
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FilterSpinnerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>


    <!-- RecyclerView Fullscreen -->
    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- TextView for Section Labels -->
    <style name="SectionLabelTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Item Styles -->
    <style name="ItemCardStyle">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ItemImageStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ItemTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemSubtitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#555</item>
    </style>

    <style name="ItemPriceTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4B2E1E</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AddToCartButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">#4B2E1E</item>
    </style>

    <style name="removeItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">#4B2E1E</item>

    </style>

    <!-- Detail Page Styles -->
    <style name="DetailLayoutStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="DetailImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:titleMarginTop">20dp</item>
    </style>

    <style name="DetailTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="DetailDescriptionTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="DetailPriceTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#2196F3</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="AddToCartFinalButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="TotalPriceTextStyle">
        <item name="android:textSize">18sp</item> <!-- Font size -->
        <item name="android:textColor">#FF0000</item> <!-- Red color -->
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Font style -->
        <item name="android:layout_marginTop">16dp</item> <!-- Margin for spacing -->
        <item name="android:textStyle">bold</item> <!-- Bold text -->
    </style>

    <style name="CenteredVerticalLayout">
            <item name="android:orientation">vertical</item> <!-- Vertical orientation -->
            <item name="android:gravity">center_vertical|center_horizontal</item> <!-- Center content both vertically and horizontally -->
            <item name="android:paddingStart">16dp</item> <!-- Left padding -->
            <item name="android:paddingEnd">16dp</item> <!-- Right padding -->
     </style>
    <style name="LogoutButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/logout</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:src">@drawable/logout</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4B2E1E</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
    </style>

    <style name="BackButtonStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/backButtonBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/backButtonTint</item>
        <item name="android:backgroundTint">@color/backButtonBackground</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>

    <style name="ButtonIconStyle">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">4dp</item> <!-- Keep small padding to avoid cropping -->
        <item name="android:scaleType">fitCenter</item> <!-- Ensures full image fits in bounds -->
        <item name="android:adjustViewBounds">true</item>
        <item name="android:tint">?attr/colorControlNormal</item> <!-- Optional: use if tinting is desired -->

    </style>


</resources>
